<!doctype html>
<html lang="hk">
  <head>
  	<meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="{{ meta.desc }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<title>{{ meta.title }}</title>
    <style type="text/css">
    	.welcome-container {
			height: 100vh;
			display: flex;
			align-items: center;
		}
		.welcome-spinner {
			width: 50vmin;
			height: 50vmin;
			margin: 0px auto;
			background-color: #ccc;
			background: linear-gradient(45deg, rgba(206,43,43,0.2) 0%, rgba(24,176,222,0.2) 100%);
			border-radius: 100%;
			-webkit-animation: sk-scaleout 1s infinite ease-in-out;
			animation: sk-scaleout 1s infinite ease-in-out;
		}
		.welcome-spinner:after {
			display: block;
			content: '';
			width: 50vmin;
			height: 50vmin;
			margin: 0px auto;
			background-color: #ccc;
			background: linear-gradient(45deg, rgba(206,43,43,0.2) 0%, rgba(24,176,222,0.2) 100%);
			border-radius: 100%;
			-webkit-animation: sk-scalein 1s 0.05s infinite ease-in-out;
			animation: sk-scalein 1s 0.05s infinite ease-in-out;
		}

		@-webkit-keyframes sk-scaleout {
			0% {
				-webkit-transform: roate(0deg) scale(0);
				opacity: 1;
			}

			100% {
				-webkit-transform: roate(360deg) scale(1);
				opacity: 0;
			}
		}
		@keyframes sk-scaleout {
			0% {
				-webkit-transform: rotate(0) scale(0);
				transform: rotate(0) scale(0);
				opacity: 1;
			}

			100% {
				-webkit-transform: rotate(360deg) scale(1);
				transform: rotate(360deg) scale(1);
				opacity: 0;
			}
		}

		@-webkit-keyframes sk-scalein {
			0% {
				-webkit-transform: roate(0deg) scale(0);
				opacity: 1;
			}

			100% {
				-webkit-transform: roate(360deg) scale(1.5);
				opacity: 0;
			}
		}
		@keyframes sk-scalein {
			0% {
				-webkit-transform: rotate(0) scale(0);
				transform: rotate(0) scale(0);
				opacity: 1;
			}

			100% {
				-webkit-transform: rotate(360deg) scale(1.5);
				transform: rotate(360deg) scale(1.5);
				opacity: 0;
			}
		}

    </style>
  </head>
  <body>
  	<div id="root">
    	<div class="welcome-container">
			<div class="welcome-spinner"></div>
		</div>
    </div>
    <script src="/dist/bundle.js"></script>
  </body>
</html>
